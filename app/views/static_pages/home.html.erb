<% provide(:title, 'Home')  %>

<!--*********************************************************************** -->
<!--1-1 COMIC TITLE ******************************************************* -->
<!--*********************************************************************** -->

<h2 class="title"><%= Comic.last.title %></h2>




<!--*********************************************************************** -->
<!--1-2 THE COMIC ********************************************************* -->
<!--*********************************************************************** -->

<div class="comic">
	<%= link_to image_tag(Comic.last.image_url), page_url(Comic.last.number-1) %>
</div>





<!--*********************************************************************** -->
<!--1-3 COMIC NAVIGATION ************************************************** -->
<!--*********************************************************************** -->


<!-- Standard navigation menu (Not visible on mobile) -->
<!--**************************************************-->
<div class="comicnav">
	<ul>
    <li><%= link_to '', page_url(Comic.first.number),  class: 'icon-fast-backward  icon', title: "Go to first" ,   method: 'get' %></li>
    <li><%= link_to '', page_url(Comic.last.number-1), class: 'icon-left-dir arrow icon', title: "Previous comic", method: 'get' %></li>
    <li><%= link_to '', page_url(random),              class: 'icon-shuffle        icon', title: "Random comic",   method: 'get' %></li>
    <li><%= link_to '', '#',                           class: 'icon-right-dir      icon hidden'                                  %></li>
    <li><%= link_to '', '#',                           class: 'icon-fast-forward   icon hidden'                                  %></li>
		<li><%= link_to '', feed_path, 									   class: 'icon-rss            icon', title: "Subscribe!"										 %></li>
		<li>
			<div class="social icon icon-share">
				<ul>
          <a class="smedia icon icon-facebook-circled" 
          	 target="_blank" 
          	 href="http://www.facebook.com/sharer.php?u=http://marchofthemeanies.com/<%= Comic.last.number %>&p[summary]=My new favorite web comic."
          	 title="Share this comic on Facebook" =>
          </a>
          <a class="smedia icon icon-twitter-circled" 
	           target="_blank" 
	           href="http://twitter.com/share?text=My%20new%20favorite%20web%20comic:&url=http://marchofthemeanies.com/<%= Comic.last.number %>" 
	           title="Share this comic on Twitter">
        	</a>
          <a class="smedia icon icon-gplus-circled" 
          	 target="_blank"
             href="https://plus.google.com/share?url=http://marchofthemeanies.com/<%= Comic.last.number %>"
             title="Share this comic on Google Plus">
          </a>
          <a class="smedia icon icon-tumblr-circled"
         		 target="_blank"  
         		 href="http://www.tumblr.com/share?v=3&u=marchofthemeanies.com/<%= Comic.last.number %>&t=%20My%20new%20favorite%20web%20comic"
         		 title="Share this comic on Tumblr">
          </a>
          <a class="smedia icon icon-mail" 
          	 href="mailto:email@echoecho.com?subject=My%20new%20favorite%20web%20comic.&body=Check it out!    http://marchofthemeanies.com/<%= Comic.last.number %>"
          	 title="Email this comic to a friend">
				  </a>
				</ul>
			</div>	
		</li>
	</ul>
</div>


<!-- Mobile navigation menu (Not visible on desktop)-->
<!--**************************************************-->
<div class="mobile-comicnav">
	<ul class="top-row">
		<li><%= link_to '',   page_url(Comic.last.number-1), class: 'icon-left-dir arrow icon',  title: "Previous comic", method: 'get' %></li>
		<li><%= link_to '',   page_url(Comic.last.number+1), class: 'icon-right-dir      icon hidden', 	                  method: 'get' %></li>
	</ul>
	<ul class="bottom-row">
			<li><%= link_to '', page_url(Comic.first.number),  class: 'icon-fast-backward  icon',  title: "Go to first",    method: 'get' %></li>
			<li><%= link_to '', page_url(random), 					   class: 'icon-shuffle        icon',  title: "Random comic",   method: 'get' %></li>
			<li><%= link_to '', page_url(Comic.last.number),   class: 'icon-fast-forward   icon hidden',	                  method: 'get' %></li>
	</ul>
</div>


<!-- Mobile swipe navigation                          -->
<!--**************************************************-->
<div id="swipey"></div>

<script>
	$("#swipey").on('swiperight', function() {
			location.href = 'http://marchofthemeanies.com/'+ <%= Comic.last.number-1 %>;
	});
</script>




