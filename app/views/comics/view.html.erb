<% provide(:title, @comic.title) %>

<!--*********************************************************************** -->
<!--1-1 COMIC TITLE ******************************************************* -->
<!--*********************************************************************** -->

<h2 class="title"><%= @comic.title %></h2>




<!--*********************************************************************** -->
<!--1-2 THE COMIC ********************************************************* -->
<!--*********************************************************************** -->

<div class="comic">
	<% if @comic.number == 1 %>
	<%= link_to image_tag(@comic.image_url), '#' %> 
	<% else %>
	<%= link_to image_tag(@comic.image_url), page_url(@comic.number-1), title: @comic.title %> 
	<% end %>
</div>





<!--*********************************************************************** -->
<!--1-3 COMIC NAVIGATION ************************************************** -->
<!--*********************************************************************** -->


<!-- Standard navigation menu (Not visible on mobile) -->
<!--**************************************************-->
<div class="comicnav">
	<ul> 
		<% if @comic == Comic.first %>
			<li><%= link_to '', '#', 													class: 'icon-fast-backward   icon hidden'															     %></li>
			<li><%= link_to '', '#', 												  class: 'icon-left-dir        icon hidden' 														     %></li>
		<% else %>
			<li><%= link_to '', page_url(Comic.first.number), class: 'icon-fast-backward   icon', title: "Go to first",    method: 'get' %></li>
			<li><%= link_to '', page_url(@comic.number-1), 		class: 'icon-left-dir arrow  icon', title: "Previous comic", method: 'get' %></li>
		<% end %>
			<li><%= link_to '', page_url(random), 						class: 'icon-shuffle         icon', title: "Random comic",   method: 'get' %></li>
		<% if @comic == Comic.last %>
			<li><%= link_to '', '#', 													class: 'icon-right-dir       icon hidden' 			  					 							 %></li>
			<li><%= link_to '', '#',													class: 'icon-fast-forward    icon hidden'  			 											     %></li>
		<% else %>
			<li><%= link_to '', page_url(@comic.number+1), 	  class: 'icon-right-dir arrow icon', title: "Next comic",     method: 'get' %></li>
			<li><%= link_to '', page_url(Comic.last.number),  class: 'icon-fast-forward    icon', title: "Go to last",  	 method: 'get' %></li>
		<% end %> 
			<li><%= link_to '', feed_path,                    class: 'icon-rss icon',						  title: "Subscribe!"    		 					   %></li>
			<li><%= render 'social' %></li>
	</ul>
</div>


<!-- Mobile navigation menu (Not visible on desktop)-->
<!--**************************************************-->
<div class="mobile-comicnav">
	<ul class="top-row">
		<% if @comic == Comic.first %>
			<li><%= link_to '', '#', 												  class: 'icon-left-dir        icon hidden' 														     %></li>
		<% else %>
			<li><%= link_to '', page_url(@comic.number-1), 		class: 'icon-left-dir arrow  icon', title: "Previous comic", method: 'get' %></li>
		<% end %>
		<% if @comic == Comic.last %>
			<li><%= link_to '', '#', 													class: 'icon-right-dir       icon hidden' 			  					 							 %></li>
		<% else %>	
			<li><%= link_to '', page_url(@comic.number+1), 	  class: 'icon-right-dir arrow icon', title: "Next comic",     method: 'get' %></li>
		<% end %>
	</ul>
	<ul class="bottom-row">
		<% if @comic == Comic.first %>
			<li><%= link_to '', '#', 													class: 'icon-fast-backward   icon hidden'															     %></li>
		<% else %>
			<li><%= link_to '', page_url(Comic.first.number), class: 'icon-fast-backward   icon', title: "Go to first",    method: 'get' %></li>
		<% end %>
			<li><%= link_to '', page_url(random), 						class: 'icon-shuffle         icon', title: "Random comic",   method: 'get' %></li>
		<% if @comic == Comic.last %>
			<li><%= link_to '', '#',													class: 'icon-fast-forward    icon hidden'  			 											     %></li>
		<% else %>
			<li><%= link_to '', page_url(Comic.last.number),  class: 'icon-fast-forward    icon', title: "Go to last", 	   method: 'get' %></li>
		<% end %>
	</ul>
</div>


<!-- Mobile swipe navigation                          -->
<!--**************************************************-->
<div id="swipey"></div>

<script>
	$("#swipey").on('swiperight', function() {
		if (<%= @comic.number %> != <%= Comic.first.number %>) {
			location.href = 'http://marchofthemeanies.com/'+ <%= @comic.number-1 %>;
		}
	});

	$("#swipey").on('swipeleft', function() {
		if (<%= @comic.number %> != <%= Comic.last.number %>) {
			location.href = 'http://marchofthemeanies.com/'+ <%= @comic.number+1 %>;
		}
	});
</script>





