<% provide(:title, @comic.title) %>

<!--*********************************************************************** -->
<!-- VIEW COMIC *********************************************************** -->
<!--*********************************************************************** -->

<div class="title">
	<h2><%= @comic.title %></h2>
</div>

<div class="comic">
	<% if @comic.number == 1 %>
	<%= link_to image_tag(@comic.image_url), '#' %> 
	<% else %>
	<%= link_to image_tag(@comic.image_url), page_url(@comic.number-1), title: @comic.title %> 
	<% end %>
</div>





<!--*********************************************************************** -->
<!-- COMIC NAVIGATION ***************************************************** -->
<!--*********************************************************************** -->

<div class="comicnav">
	<ul>
			<li><%= link_to '', feed_path, class: 'icon-rss icon', id: 'feed-icon', title: "Subscribe!" %></li>
		<% if @comic == Comic.first %>
			<li><%= link_to '', page_url(Comic.first.number),  method: 'get', class: 'icon-fast-backward icon hidden' %></li>
			<li><%= link_to '', page_url(@comic.number-1),     method: 'get', class: 'icon-left-dir icon hidden' %></li>
		<% else %>
			<li><%= link_to '', page_url(Comic.first.number),  method: 'get', class: 'icon-fast-backward icon', title: "Go to first" %></li>
			<li><%= link_to '', page_url(@comic.number-1),     method: 'get', class: 'icon-left-dir icon', id: "arrow", title: "Previous comic" %></li>
		<% end %>
			<li><%= link_to '', page_url(random), method: 'get', class: 'icon-shuffle icon', title: "Random comic" %></li>
		<% if @comic == Comic.last %>
			<li><%= link_to '', page_url(@comic.number+1), 	   method: 'get', class: 'icon-right-dir hidden icon'  %></li>
			<li><%= link_to '', page_url(Comic.last.number),	 method: 'get', class: 'icon-fast-forward hidden icon' %></li>
		<% else %>
			<li><%= link_to '', page_url(@comic.number+1), 	   method: 'get', class: 'icon-right-dir icon', id: "arrow", title: "Next comic" %></li>
			<li><%= link_to '', page_url(Comic.last.number),	 method: 'get', class: 'icon-fast-forward icon', title: "Go to last" %></li>
		<% end %>
			<li>
		<%= render 'social' %>			
			</li>
	</ul>
</div>

