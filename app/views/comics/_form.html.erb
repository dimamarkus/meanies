<!--******************************************************************************** -->
<!-- Comic Upload/Edit Form ******************************************************** -->
<!--******************************************************************************** -->

<div class="form-wrapper">

  <%= form_for @comic, html:  { multipart: true } do |f| %>
    <div class="form">

      <div class="form-header">
        <%= yield(:title) %>
      </div>

      <div class="form-content">
        <div class="comic-thumb">
          <%= link_to (image_tag yield(:comic_thumb)), @comic %>
        </div>
        <div class="upload-button">
          <div id="file-input"  onclick="getFile()">
            <p>Choose image file</p>
          </div>
          <div id="file-input-tag">
            <input id="comic_image" type="file" name="comic[image]" value="upload"/>
          </div>
        </div>  
        <%= f.text_field :title, class: "input title-input", placeholder: "Title" %>
      </div>

      <div class="form-footer">
        <%= f.submit "Submit", class: "button" %>
      </div>
    </div>
  <% end %>
</div>